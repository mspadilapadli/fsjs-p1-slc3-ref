<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MiniStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('_navbar') %>
        <div class="container">
            <h5>
                <%= isEdit ? "Update" : "Add" %> Book
            </h5>
            <p>
                <%=action %>
            </p>
            <form action="<%= action %>" method="post">
                <div class="row">

                    <div class="col mb-3">
                        <label class="form-label">Title
                            <% if (errors.title) { %>
                                <small class="text-danger ms-2">
                                    *<%= errors.title %>
                                </small>
                                <% } %>
                        </label>
                        <input type="text" class="form-control <%= errors.title ? 'is-invalid' : '' %>" name="title"
                            value="<%= book.title %>">
                    </div>
                    <div class="col mb-3">
                        <label class="form-label">ISBN
                            <% if (errors.isbn) { %>
                                <small class="text-danger ms-2">
                                    *<%= errors.isbn %>
                                </small>
                                <% } %>
                        </label>
                        <input type="text" class="form-control <%= errors.isbn ? 'is-invalid' : '' %>" name="isbn"
                            value="<%= book.isbn %>">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Stock
                        <% if (errors.stock) { %>
                            <small class="text-danger ms-2">
                                *<%= errors.stock %>
                            </small>
                            <% } %>
                    </label>
                    <input type="number" class="form-control <%= errors.stock ? 'is-invalid' : '' %>" name="stock"
                        value="<%= book.stock %>">
                </div>

                <div class="mb-3">
                    <label class="form-label">Price
                        <% if (errors.price) { %>
                            <small class="text-danger ms-2">
                                *<%= errors.price %>
                            </small>
                            <% } %>
                    </label>
                    <input type="number" class="form-control <%= errors.price ? 'is-invalid' : '' %>" name="price"
                        value="<%= book.price %>">
                </div>

                <div class="mb-3">
                    <label class="form-label">Author
                        <% if (errors.AuthorId) { %>
                            <small class="text-danger ms-2">
                                *<%= errors.AuthorId %>
                            </small>
                            <% } %>
                    </label>
                    <select class="form-select <%= errors.AuthorId ? 'is-invalid' : '' %>" name="AuthorId">
                        <option value="" hidden> Choose the author</option>
                        <% authors.forEach((author)=>{ %>
                            <option value="<%= author.id %>" <%=book.AuthorId==author.id ? "selected" : "" %>>
                                <%=author.name %>
                            </option>
                            <%})%>
                    </select>
                </div>

                <button type="submit" class="btn btn-info">
                    <%= isEdit ? "Update" : "Add" %>
                </button>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>